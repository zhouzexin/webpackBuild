{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [0],
        "quotes": [0, "double"],
        "no-console": 0,
        "no-unused-vars": 1,
        "no-mixed-spaces-and-tabs": 0,
        "no-undef": 1
    },
    env : {
        browser : true,
        node : true,
        es6 : true
    },
    "extends": [
        "eslint:recommended"
    ],
    plugins: [
        "react"
    ]
}
